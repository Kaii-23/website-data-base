@page "/"
@using MudBlazor
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>Basic Homepage Layout</title>
    <style>
        /* Reset some default styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            background-color: #f4f4f4;
            display: flex;
            flex-direction: column; /* Stack items vertically */
            min-height: 100vh; /* Full height of the viewport */
        }

        /* Header */
        header {
            background-color: #4CAF50;
            color: white;
            text-align: center;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        /* Navigation Bar */
        nav {
            background-color: #333;
            color: white;
            padding: 10px;
            display: flex;
            justify-content: center;
            border-radius: 5px;
            margin-bottom: 20px;
        }

            nav a {
                color: white;
                padding: 10px 20px;
                text-decoration: none;
                margin: 0 10px;
                transition: background-color 0.3s;
            }

                nav a:hover {
                    background-color: #575757;
                }

        /* Main Content Area */
        .content-wrapper {
            display: flex;
            justify-content: center;
            align-items: center;
            flex: 1; /* Take up the remaining space */
        }

        /* Content Section */
        .content {
            background-color: #fff;
            padding: 20px;
            width: 80%; /* Makes content box smaller */
            max-width: 600px; /* Maximum width of the content box */
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        /* Footer */
        footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 20px;
            margin-top: 20px;
            border-radius: 10px;
        }

        /* Circle Button */
        .circle-button {
            width: 50px;
            height: 50px;
            background-color: #f39c12;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 18px;
            text-decoration: none;
            margin-top: 20px;
            transition: background-color 0.3s;
        }

            .circle-button:hover {
                background-color: #e67e22;
            }

    </style>
</head>
<body>

    <!-- Header -->
    <header>
        <h1>Welcome to My Homepage</h1>
        <p>Your tagline goes here</p>
    </header>

    <!-- Navigation -->
    <nav>
        <a href="#">Home</a>
        <a href="#">About</a>
        <a href="#">Services</a>
        <a href="#">Contact</a>
    </nav>

    <!-- Main Content Section -->
    <div class="content-wrapper">
        <!-- Content Area -->
        <div class="content">
            <h2>Main Content</h2>
            <p>This is the main content area where you can add your page's text, images, and other elements.</p>
            <p>Feel free to expand this section with more content as needed!</p>

            <!-- Circle Button -->
            <a href="#" class="circle-button">Go</a>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 My Website. All rights reserved.</p>
    </footer>

</body>
</html>

                <MudButton Href="/Login"
                           Variant="Variant.Filled"
                           Color="Color.Primary">
                    Login
                </MudButton>
                <MudButton Href="https://localhost:7031/Login"
                           Target="_blank"
                           Variant="Variant.Filled"
                           Color="Color.Primary">
                    Settings
